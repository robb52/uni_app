<div calss="container">
  <div class="row center sign-up-form">
    <div class="col s6 offset-s3">
      <div class="card-panel">
        <h3 class="header">Log in</h3>
        <div class="row">
          <%= form_for(:logins, html: {class: "col s12"}) do |f| %>
            
            <div class="row">
              <div class="input-field col s12">
                <%= f.text_field :email, placeholder: "Enter your email", autofocus: true %>
                <%= f.label :email %>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <%= f.password_field :password, placeholder: "Enter your password" %>
                <%= f.label :password, class: "active" %>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <%= f.button '<i class="material-icons right">forward</i>Log in'.html_safe, class: "btn cyan accent-2 waves-effect waves-light right" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
