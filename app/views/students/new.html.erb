<% if @student.errors.any? %>
  <div class="container">
    <div class="row sign-up-form">
      <div class="col s12">
        <div class="card-panel red light">
          <span class="white-text">
            <storng><%= pluralize(@student.errors.count, "error") %></storng>
            prohibited your profile being created
            <ul>
              <% @student.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </span>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div calss="container">
  <div class="row center sign-up-form">
    <div class="col s6 offset-s3">
      <div class="card-panel">
        <h3 class="header">Sign Up</h3>
        <div class="row">
          <%= form_for(@student, html: {class: "col s12"}) do |f| %>
            <div class="row">
              <div class="input-field col s12">
                <%= f.text_field :name, placeholder: "Enter your full name", autofocus: true %>
                <%= f.label :name %>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <%= f.text_field :email, placeholder: "Enter your email" %>
                <%= f.label :email %>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <%= f.submit "Sign Up", class: "btn cyan accent-2 waves-effect waves-light right" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
