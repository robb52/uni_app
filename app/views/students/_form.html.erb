<%= render 'shared/errors', obj: @student %>

<div calss="container">
  <div class="row center sign-up-form">
    <div class="col s6 offset-s3">
      <div class="card-panel">
        <h3 class="header"><%= @student.new_record? ? "Sign Up" : "Eidt your profile" %></h3>
        <div class="row">
          <%= form_for(@student, html: {class: "col s12"}) do |f| %>
            <div class="row">
              <div class="input-field col s12">
                <%= f.text_field :name, placeholder: "Enter your full name", autofocus: true %>
                <%= f.label :name %>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <%= f.text_field :email, placeholder: "Enter your email" %>
                <%= f.label :email, class: "active" %>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <%= f.password_field :password, placeholder: "Choose a password" %>
                <%= f.label :password, class: "active" %>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <%= f.password_field :password_confirmation, placeholder: "Confirm your password" %>
                <%= f.label :password_confirmation, class: "active" %>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <%= f.button(@student.new_record? ? '<i class="material-icons right">forward</i>Sign up'.html_safe : '<i class="material-icons right">forward</i>Submit changes'.html_safe, class: "btn cyan accent-2 waves-effect waves-light right") %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
